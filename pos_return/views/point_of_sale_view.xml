<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="return_view_pos_tree" model="ir.ui.view" >
            <field name="name">ret.pos.order.tree</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_order_tree"/>
            <field name="arch" type="xml">
                <field name="pos_reference" position="after">
                    <field name="back_order"/>
                </field>
            </field>
        </record>

        <record id="return_view_pos_form" model="ir.ui.view" >
            <field name="name">ret.pos.order.form</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <field name="pos_reference" position="after">
                   <field name="back_order"/>
                </field>
            </field>
        </record>

		<record model="ir.ui.view" id="aspl_view_pos_config_form">
            <field name="name">pos.config.form.view.inherit</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <div id="category_reference" position="before">
                  <div class="col-xs-12 col-md-9 o_setting_box" id="pos_return">
                       <div class="o_setting_left_pane">
                           <field name="enable_pos_return"/>
                       </div>
                      <div class="o_setting_right_pane">
                          <label for="enable_pos_return"/>
                          <div class="mt16" attrs="{'invisible':[('enable_pos_return','=',False)],
                                 'required':[('enable_pos_return','=',True)]}">
                              <label for="scrap_location_id"/>
                              <field name="scrap_location_id"/>
                          </div>
                       </div>
                  </div>
               </div>
            </field>
        </record>

    </data>
</odoo>