    <t t-extend="PosTicket">
      <t t-jquery=".pos-sale-ticket" t-operation="replace">
        <div class="pos-sale-ticket">
          <t t-if="widget.pos.company_logo_base64">
              <div style="width:100%;height:auto;text-align:center;padding: 2em 0;">
                  <img t-att-src="widget.pos.company_logo_base64" style="max-height:100px;max-width:180px"/>
              </div>
              <br/>
          </t>
          <t t-if="receipt.header">
            <div style='text-align:center;margin: 0px 25%;'>
              <div><t t-esc="receipt.header" /></div>
              <!-- <p>=====================================</p> -->
            </div>
            <br/>
          </t>

          <div class="pos-center-align"><t t-esc="order.formatted_validation_date"/> <t t-esc="order.name"/></div>
          <br />
          <!-- <t t-esc="widget.pos.company.name"/><br />
          <div class="receipt-phone">
              Phone: <t t-esc="widget.pos.company.phone || ''"/><br />
          </div> -->
          <div class="receipt-user">
              User: <t t-esc="widget.pos.get_cashier().name"/><br />
              Register: <t t-esc="widget.pos.user.name"/><br />
          </div>
          <br />
          <table class='receipt-orderlines'>
              <colgroup>
                  <col width='50%' />
                  <col width='25%' />
                  <col width='25%' />
              </colgroup>
              <tr t-foreach="orderlines" t-as="orderline">
                  <td>
                      <span>[<t t-esc="orderline.get_product().default_code"/>] <t t-esc="orderline.get_product().display_name"/></span>
                       <t t-if="orderline.get_discount() > 0">
                          <div class="pos-disc-font">
                              With a <t t-esc="orderline.get_discount()"/>% discount
                          </div>
                      </t>
                  </td>
                  <td class="pos-right-align">
                      <t t-esc="orderline.get_quantity_str_with_unit()"/>
                  </td>
                  <td class="pos-right-align">
                      <t t-esc="widget.format_currency(orderline.get_display_price())"/>
                  </td>
              </tr>
            </table>
            <br />
            <table class='receipt-total'>
                <tr>
                    <td>Subtotal:</td>
                    <td class="pos-right-align">
                        <t t-esc="widget.format_currency(order.get_total_without_tax())"/>
                    </td>
                </tr>
                <t t-foreach="order.get_tax_details()" t-as="taxdetail">
                    <tr>
                        <td><t t-esc="taxdetail.name" /></td>
                        <td class="pos-right-align">
                            <t t-esc="widget.format_currency(taxdetail.amount)" />
                        </td>
                    </tr>
                </t>
                <tr>
                    <t t-if="order.get_total_discount() > 0">
                        <td>Discount:</td>
                        <td class="pos-right-align">
                            <t t-esc="widget.format_currency(order.get_total_discount())"/>
                        </td>
                    </t>
                </tr>
                <tr class="emph">
                    <td>Total:</td>
                    <td class="pos-right-align">
                        <t t-esc="widget.format_currency(order.get_total_with_tax())"/>
                    </td>
                </tr>
            </table>
            <br />
            <table class='receipt-paymentlines'>
                <t t-foreach="paymentlines" t-as="line">
                  <tr>
                      <td>
                          <t t-esc="line.name"/>
                      </td>
                      <td class="pos-right-align">
                          <t t-esc="widget.format_currency(line.get_amount())"/>
                      </td>
                  </tr>
                </t>
            </table>
            <br />
            <table class='receipt-change'>
                <tr><td>Change:</td><td class="pos-right-align">
                    <t t-esc="widget.format_currency(order.get_change())"/>
                    </td></tr>
            </table>
            <br/>
            <div style='text-align:center'>
              <p>=====================================</p>
              <span>Thank you for shopping with us!</span>
              <p>=====================================</p>
            </div>
            <table>
                <tbody>
                    <tr id="barcode1">
                        <td style='padding:20px 2px 2px 0px; text-align:center;'>
                            <div id="barcode_div" />
                            <t t-esc="order.name"/>
                        </td>
                    </tr>
                </tbody>
            </table>
            <t t-if="receipt.footer">
                <br />
                <div style='text-align:center'>
                    <t t-esc="receipt.footer" />
                </div>
            </t>
        </div>
      </t>
    </t>




    <t t-extend="XmlReceipt">
        <t t-jquery=".before-footer" t-operation="after">
           <t t-if='receipt.barcode_src' >
               <img t-att-src="receipt.barcode_src" style="height:75px!important;max-width:300px!important;margin:auto" />
               <p t-esc="receipt.barcode_src"/>
            </t>
        </t>
    </t>
</templates>
