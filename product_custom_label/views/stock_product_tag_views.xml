<odoo>
    <data>

        <record id="view_stock_product_tag_form" model="ir.ui.view">
            <field name="name">view.stock.product.tag.form</field>
            <field name="model">stock.product.tag</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>

                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                            <field name="template" string="Label template" widget="radio"/>
                        </div>
                        <group string="Dimensions">
                            <group>
                                <field name="label_width"/>
                            </group>
                            <group>
                                <field name="label_height"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Attributes to print">
                                <group>
                                    <group string="Display Fields Configuration">
                                        <field name="is_product_name"/>
                                        <field name="is_product_price"/>
                                        <field name="is_product_attr"/>
                                        <field name="is_product_barcode"/>

                                        <separator string="Labels attr."/>
                                        <field name="is_label_attr_1"/>
                                        <field name="is_label_attr_2"/>
                                        <field name="is_label_attr_3"/>
                                        <field name="is_label_attr_4"/>
                                        <field name="is_label_attr_5"/>
                                    </group>
                                    <group string="Font Size Configuration">
                                        <field name="fz_product_name"/>
                                        <field name="fz_product_price"/>
                                        <field name="fz_product_attr"/>
                                        <field name="fz_product_barcode"/>

                                        <separator string="Colors Labels attr."/>
                                        <field name="color_label_attr_1" widget="colorpicker"/>
                                        <field name="color_label_attr_2" widget="colorpicker"/>
                                        <field name="color_label_attr_3" widget="colorpicker"/>
                                        <field name="color_label_attr_4" widget="colorpicker"/>
                                        <field name="color_label_attr_5" widget="colorpicker"/>
                                    </group>
                                </group>

                            </page>
                            <!--                            <page string="Tags Lines">-->
                            <!--                                <field name="tags_line_ids" nolabel="1">-->
                            <!--                                    <tree editable="bottom">-->
                            <!--                                        <field name="sequence" widget="handle"/>-->
                            <!--                                        <field name="font_size"/>-->
                            <!--                                        <field name="font_color" widget="colorpicker"/>-->
                            <!--                                        <field name="product_attribute"/>-->
                            <!--                                    </tree>-->
                            <!--                                </field>-->
                            <!--                            </page>-->
                            <!--                            <page string="Products">-->
                            <!--                                <field name="product_ids" widget="many2many_tags"/>-->
                            <!--                            </page>-->

                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_stock_product_tag_view" model="ir.actions.act_window">
            <field name="name">Product Tags</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.product.tag</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>