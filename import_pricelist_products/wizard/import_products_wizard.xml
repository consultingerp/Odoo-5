<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="import_product_wizard_form" model="ir.ui.view">
            <field name="name">import.product.wizard.form</field>
            <field name="model">import.product.wizard</field>
            <field name="arch" type="xml">
                <form string="Import products to pricelist">
                    <group>
                        <group>
                            <field name="data" widget="binary" filename="filename" />
                            <field name="filename" invisible="1" />

                        </group>
                    </group>

                    <footer>
                        <button string="Import products" type="object" name="do_import_products" class="oe_highlight" />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
