<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Tree view for "lane" -->
        <record id="view_lane_tree" model="ir.ui.view">
            <field name="name">view.lane.tree</field>
            <field name="model">pos_vantiv_tripos_cloud.lane</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Lanes">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <!-- Form view for "lane" -->
        <record id="view_lane_form" model="ir.ui.view">
            <field name="name">view.lane.form</field>
            <field name="model">pos_vantiv_tripos_cloud.lane</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Lane">
                    <header>
                        <button name="add_lane_to_triposcloud" states='draft' class="oe_highlight" string="Add from TriposCloud" type="object" />
                        <button name="del_lane_to_triposcloud" states='added' string="Delete from TriposCloud" type="object" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,added,del" />
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" class="oe_inline" placeholder="name" />
                            </h1>
                            <field name="configuration_id" />
                        </div>
                        <group>
                            <group>
                                <field name="lane_id" />
                                <field name="terminal_id" />

                            </group>
                            <group>
                                <field name="description" />
                                <field name="activation_code" />
                            </group>
                        </group>

                        <notebook>
                            <page string="Body Response">
                                <field name="body" />
                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>


        <!-- Main window action for "lane" -->
        <record id="action_lane_configuration_form" model="ir.actions.act_window">
            <field name="name">Lane Configurations</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pos_vantiv_tripos_cloud.lane</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                Configure your Lane
                </p>
            </field>
        </record>

    </data>
</odoo>
