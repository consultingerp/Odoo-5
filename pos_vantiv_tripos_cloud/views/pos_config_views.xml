<?xml version="1.0"?>
<odoo>

    <record id="pos_config_view_form_inherit_vantiv" model="ir.ui.view">
        <field name="name">pos.config.form.inherit.vantiv</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
        <field name="arch" type="xml">

            <xpath expr="//div[@id='payment_methods']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="payment_methods">
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Vantiv Lanes</span>
                        <div class="text-muted">
                        Vantiv Lanes available
                        </div>
                        <div class="content-group mt16">
                            <field name="lane_id" colspan="4" nolabel="0" />
                        </div>
                    </div>
                </div>
            </xpath>

        </field>
    </record>

</odoo>
