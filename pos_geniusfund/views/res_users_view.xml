<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>

        <record id="res_users_form_view" model="ir.ui.view">
            <field name="name">res.users.form.view</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="point_of_sale.res_users_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='pos_security_pin']" position="after">
                    <field name = "is_pos_redirected"/>
					<field name = "default_pos_config" attrs="{'invisible' : [('is_pos_redirected', '=', False)],
                                                                'required' : [('is_pos_redirected', '!=', False)]}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>